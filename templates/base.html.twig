<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
            <a class="navbar-brand" href="#">Kindle Notes</a>
            {% if is_granted('ROLE_USER') %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('books') }}">
                            Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('categories') }}">
                            Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('tags') }}">
                            Tags
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('show_import') }}">
                            Import
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('truncate_db') }}">
                            Truncate DB!
                        </a>
                    </li>
                </ul>
            {% endif %}
            <ul class="navbar-nav ml-auto">
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item dropleft">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="{{ path('app_profile') }}">Profile</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                    </div>
                </li>
            {% else %}
                <li class="nav-item mr-3">
                    <a href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_register') }}">Register</a>
                </li>
            {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
